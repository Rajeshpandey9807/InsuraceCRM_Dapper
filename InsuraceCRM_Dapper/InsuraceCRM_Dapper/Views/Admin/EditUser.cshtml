@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
    <div>
        <h2 class="mb-1">Edit @Model.Form.Name</h2>
        <p class="text-muted mb-0">Update the user details or reset their password.</p>
    </div>
    <a asp-action="Users" class="btn btn-outline-secondary">Back to Users</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="EditUser" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Form.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Form.Name" class="form-label"></label>
                        <input asp-for="Form.Name" class="form-control" />
                        <span asp-validation-for="Form.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Form.Email" class="form-label"></label>
                        <input asp-for="Form.Email" class="form-control" />
                        <span asp-validation-for="Form.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Form.Mobile" class="form-label"></label>
                        <input asp-for="Form.Mobile" class="form-control" />
                        <span asp-validation-for="Form.Mobile" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Form.Role" class="form-label"></label>
                        <select asp-for="Form.Role" class="form-select">
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Form.Role" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Form.Password" class="form-label"></label>
                        <input asp-for="Form.Password" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="Form.Password" class="text-danger"></span>
                        <small class="text-muted d-block mt-1">Leave blank to keep the current password.</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Form.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Form.ConfirmPassword" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="Form.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-check form-switch mb-4">
                <input asp-for="Form.IsActive" class="form-check-input" />
                <label asp-for="Form.IsActive" class="form-check-label">User can sign in</label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Users" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
