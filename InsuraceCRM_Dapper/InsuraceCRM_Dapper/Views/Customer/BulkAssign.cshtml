@model BulkAssignCustomersViewModel
@using System.Linq
@{
    ViewData["Title"] = "Bulk Assign Customers";
    var totalCustomers = Model.Customers.Count();
    var currentlyAssigned = Model.Customers.Count(c => c.AssignedEmployeeId.HasValue);
    var unassignedCustomers = totalCustomers - currentlyAssigned;
    var preselectedCount = Model.SelectedCustomerIds?.Count ?? 0;
    var employeeCount = Model.Employees.Count();
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
    <div>
        <h2 class="mb-1">Bulk Assign Customers</h2>
        <p class="text-muted mb-0">Select multiple customers and assign them to an employee for follow-up calls.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Customers</a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-3 mb-4">
    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted text-uppercase small mb-1">Customers loaded</p>
                <div class="d-flex align-items-baseline gap-2">
                    <strong class="display-6">@totalCustomers</strong>
                    <span class="text-success fw-semibold">@currentlyAssigned assigned</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted text-uppercase small mb-1">Unassigned</p>
                <div class="d-flex align-items-baseline gap-2">
                    <strong class="display-6">@unassignedCustomers</strong>
                    <span class="text-muted">Need follow-up</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted text-uppercase small mb-1">Employees available</p>
                <div class="d-flex align-items-baseline gap-2">
                    <strong class="display-6">@employeeCount</strong>
                    <span class="text-muted">for assignment</span>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Model.Customers.Any())
{
    <div class="alert alert-info">
        There are no customers available to assign right now.
    </div>
}
else
{
    <form asp-action="BulkAssign" method="post" class="mt-3" id="bulkAssignForm">
        @Html.AntiForgeryToken()
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row g-3 align-items-start">
                    <div class="col-md-4 d-flex flex-column">
                        <label asp-for="SelectedEmployeeId" class="form-label">Assign To</label>
                        @Html.ValidationMessageFor(m => m.SelectedEmployeeId, "", new { @class = "text-danger small d-block mb-1" })
                        <select asp-for="SelectedEmployeeId" class="form-select">
                            <option value="">-- Select Employee --</option>
                            @foreach (var employee in Model.Employees)
                            {
                                <option value="@employee.Id">@employee.FullName (@employee.Email)</option>
                            }
                        </select>
                        @if (!Model.Employees.Any())
                        {
                            <div class="alert alert-warning mt-2 py-2">
                                No employees are currently available. Add employees first to start assigning customers.
                            </div>
                        }
                    </div>
                    <div class="col-md-4 d-flex flex-column">
                        <label for="customerSearch" class="form-label">Filter Customers</label>
                        <input type="search" id="customerSearch" class="form-control" placeholder="Search by name, mobile, or location" />
                        <small class="text-muted">Search applies instantly to the list below.</small>
                    </div>
                    <div class="col-md-4 d-flex flex-column gap-2">
                        <label class="form-label">Selection Summary</label>
                        <div class="d-flex flex-column flex-md-row align-items-md-center gap-2">
                            <span class="badge bg-primary-subtle text-primary">
                                Selected: <span id="selectedCount">@preselectedCount</span>
                            </span>
                            <button type="submit" class="btn btn-primary flex-grow-1 flex-md-grow-0" id="assignButton" disabled>
                                Assign Selected
                            </button>
                        </div>
                        <small class="text-muted">Pick at least one customer to enable the button.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-transparent">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
                    <div>
                        <strong>Customer List</strong>
                        <span class="text-muted small d-block">Use the checkbox to include customers in the assignment.</span>
                    </div>
                    <div class="d-flex gap-2 align-items-center">
                        <span class="badge bg-light text-dark">Total: @totalCustomers</span>
                        <span class="badge bg-light text-dark">Unassigned: @unassignedCustomers</span>
                    </div>
                </div>
            </div>
            <div class="px-3 pt-2">
                @Html.ValidationMessageFor(m => m.SelectedCustomerIds, "", new { @class = "text-danger small d-block mb-2" })
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="bulkAssignTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width:50px;">
                                <input type="checkbox" class="form-check-input" id="selectAll" />
                            </th>
                            <th>Name & Details</th>
                            <th>Mobile</th>
                            <th>Location</th>
                            <th>Insurance Type</th>
                            <th>Currently Assigned</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            var searchText = $"{customer.Name} {customer.MobileNumber} {customer.Location} {customer.InsuranceType} {customer.AssignedEmployeeName}";
                            var isSelected = Model.SelectedCustomerIds.Contains(customer.Id);
                            var isUnassigned = !customer.AssignedEmployeeId.HasValue;
                            <tr data-search-text="@searchText">
                                <td>
                                    <input type="checkbox"
                                           class="form-check-input customer-checkbox"
                                           name="SelectedCustomerIds"
                                           value="@customer.Id"
                                           @(isSelected ? "checked=\"checked\"" : string.Empty) />
                                </td>
                                <td>
                                    <div class="fw-semibold">@customer.Name</div>
                                    <div class="text-muted small">Added @customer.CreatedDate.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                </td>
                                <td>@customer.MobileNumber</td>
                                <td>@(customer.Location ?? "-")</td>
                                <td>@(customer.InsuranceType ?? "-")</td>
                                <td>
                                    @if (isUnassigned)
                                    {
                                        <span class="badge bg-warning-subtle text-warning">Unassigned</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success">@customer.AssignedEmployeeName</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.getElementById('bulkAssignForm');
            if (!form) {
                return;
            }

            const selectAll = document.getElementById('selectAll');
            const assignButton = document.getElementById('assignButton');
            const selectedCount = document.getElementById('selectedCount');
            const searchInput = document.getElementById('customerSearch');

            const customerCheckboxes = () => Array.from(document.querySelectorAll('.customer-checkbox'));
            const tableRows = () => Array.from(document.querySelectorAll('#bulkAssignTable tbody tr'));

            function updateSelectionState() {
                const checkboxes = customerCheckboxes();
                const checkedBoxes = checkboxes.filter(cb => cb.checked && !cb.disabled);
                const totalBoxes = checkboxes.filter(cb => !cb.disabled);

                if (selectedCount) {
                    selectedCount.textContent = checkedBoxes.length;
                }

                if (assignButton) {
                    assignButton.disabled = checkedBoxes.length === 0;
                }

                if (selectAll) {
                    selectAll.checked = checkedBoxes.length > 0 && checkedBoxes.length === totalBoxes.length;
                    selectAll.indeterminate = checkedBoxes.length > 0 && checkedBoxes.length < totalBoxes.length;
                }
            }

            document.addEventListener('change', event => {
                if (event.target && event.target.classList.contains('customer-checkbox')) {
                    updateSelectionState();
                }
            });

            if (selectAll) {
                selectAll.addEventListener('change', event => {
                    customerCheckboxes().forEach(cb => {
                        if (!cb.disabled) {
                            cb.checked = event.target.checked;
                        }
                    });
                    updateSelectionState();
                });
            }

            if (searchInput) {
                searchInput.addEventListener('input', event => {
                    const query = event.target.value.trim().toLowerCase();
                    tableRows().forEach(row => {
                        const haystack = row.dataset.searchText?.toLowerCase() ?? '';
                        row.classList.toggle('d-none', haystack.indexOf(query) === -1);
                    });
                });
            }

            updateSelectionState();
        })();
    </script>
}
