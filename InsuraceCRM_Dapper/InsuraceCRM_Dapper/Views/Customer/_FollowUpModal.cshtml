@model FollowUpFormViewModel
@{
    var insuranceTypes = new[] { "Life", "Health", "Term", "ULIP" };
    var callStatuses = new[] { "Interested", "Call Back Later", "Not Interested", "Not Reachable", "Number Switched Off" };
}

<div class="modal fade" id="followUpModal" tabindex="-1" aria-labelledby="followUpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <h5 class="modal-title mb-0" id="followUpModalLabel">Add Follow-Up</h5>
                    <p class="small text-muted mb-0">Complete the latest interaction from here without leaving the list.</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning d-none" id="followUpAssignmentWarning" role="alert">
                    Assign this customer to a team member before logging follow-ups.
                </div>
                <div class="alert alert-danger d-none" id="followUpErrorAlert" role="alert"></div>
                <div class="alert alert-success d-none" id="followUpInlineSuccess" role="alert"></div>

                <div class="border rounded-3 p-3 mb-4 bg-light">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label small text-uppercase text-muted">Customer</label>
                            <input type="text" class="form-control form-control-sm" id="followUpCustomerName" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small text-uppercase text-muted">Mobile</label>
                            <input type="text" class="form-control form-control-sm" id="followUpCustomerMobile" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small text-uppercase text-muted">Location</label>
                            <input type="text" class="form-control form-control-sm" id="followUpCustomerLocation" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small text-uppercase text-muted">Assigned To</label>
                            <input type="text" class="form-control form-control-sm" id="followUpAssignedTo" readonly />
                        </div>
                    </div>
                </div>

                <form id="followUpForm" asp-controller="FollowUp" asp-action="AddFromList" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input asp-for="CustomerId" type="hidden" />
                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <label asp-for="InsuranceType" class="form-label"></label>
                            <select asp-for="InsuranceType" class="form-select form-select-sm">
                                <option value="">Select insurance type</option>
                                @foreach (var type in insuranceTypes)
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                            <span asp-validation-for="InsuranceType" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Budget" class="form-label"></label>
                            <input asp-for="Budget" class="form-control form-control-sm" type="number" step="0.01" min="0" />
                            <span asp-validation-for="Budget" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="HasExistingPolicy" class="form-label"></label>
                            <select asp-for="HasExistingPolicy" class="form-select form-select-sm">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span asp-validation-for="HasExistingPolicy" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <label asp-for="FollowUpDate" class="form-label"></label>
                            <input asp-for="FollowUpDate" class="form-control form-control-sm" type="date" />
                            <span asp-validation-for="FollowUpDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="FollowUpStatus" class="form-label"></label>
                            <select asp-for="FollowUpStatus" class="form-select form-select-sm">
                                <option value="">Select call status</option>
                                @foreach (var status in callStatuses)
                                {
                                    <option value="@status">@status</option>
                                }
                            </select>
                            <span asp-validation-for="FollowUpStatus" class="text-danger small"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="FollowUpNote" class="form-label"></label>
                            <textarea asp-for="FollowUpNote" class="form-control" rows="3" placeholder="Key discussion points and next steps"></textarea>
                            <span asp-validation-for="FollowUpNote" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-4 align-items-end">
                        <div class="col-md-6" data-reminder-wrapper>
                            <label asp-for="NextReminderDateTime" class="form-label"></label>
                            <input asp-for="NextReminderDateTime" class="form-control form-control-sm" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                            <span asp-validation-for="NextReminderDateTime" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ReminderRequired" class="form-label"></label>
                            <select asp-for="ReminderRequired" class="form-select form-select-sm">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span asp-validation-for="ReminderRequired" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <label asp-for="IsConverted" class="form-label"></label>
                            <select asp-for="IsConverted" class="form-select form-select-sm">
                                <option value="" selected="selected">Not decided</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span asp-validation-for="IsConverted" class="text-danger small"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ConversionReason" class="form-label"></label>
                            <textarea asp-for="ConversionReason" class="form-control" rows="2" placeholder="Reason if the deal did not convert"></textarea>
                            <span asp-validation-for="ConversionReason" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <small class="text-muted">
                            Need history? <a href="#" id="followUpHistoryLink" target="_blank" rel="noopener">Open follow-up history</a>
                        </small>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" data-follow-up-submit>
                                <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true" data-follow-up-spinner></span>
                                Save Follow-Up
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
