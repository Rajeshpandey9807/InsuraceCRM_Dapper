@model FollowUpHistoryViewModel
@{
    ViewData["Title"] = "Follow-up History";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2>Follow-ups - @Model.Customer?.Name</h2>
        <p class="text-muted">@Model.Customer?.MobileNumber</p>
    </div>
    <div>
        <a asp-action="Add" asp-route-customerId="@Model.Customer?.Id" class="btn btn-primary">Add Follow-up</a>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.FollowUps.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Insurance Type</th>
                            <th>Budget</th>
                            <th>Existing Policy</th>
                            <th>Call Status</th>
                            <th>Notes</th>
                            <th>Next Follow-Up</th>
                            <th>Reminder Required</th>
                            <th>Converted</th>
                            <th>Product Sold</th>
                            <th>Ticket Size</th>
                            <th>Policy #</th>
                            <th>Enforce Date</th>
                            <th>Reason</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var followUp in Model.FollowUps)
                        {
                            <tr>
                                <td>@followUp.FollowUpDate.ToString("yyyy-MM-dd")</td>
                                <td>@(string.IsNullOrWhiteSpace(followUp.InsuranceType) ? "-" : followUp.InsuranceType)</td>
                                <td>@(followUp.Budget.HasValue ? followUp.Budget.Value.ToString("N2") : "-")</td>
                                <td>@(followUp.HasExistingPolicy ? "Yes" : "No")</td>
                                <td>@(string.IsNullOrWhiteSpace(followUp.FollowUpStatus) ? "-" : followUp.FollowUpStatus)</td>
                                <td>@(string.IsNullOrWhiteSpace(followUp.FollowUpNote) ? "-" : followUp.FollowUpNote)</td>
                                <td>@followUp.NextReminderDateTime?.ToString("g")</td>
                                <td>@(followUp.ReminderRequired ? "Yes" : "No")</td>
                                <td>
                                    @{
                                        var conversionText = followUp.IsConverted switch
                                        {
                                            true => "Yes",
                                            false => "No",
                                            _ => "Pending"
                                        };
                                    }
                                    @conversionText
                                </td>
                                <td>@(string.IsNullOrWhiteSpace(followUp.SoldProductName) ? "-" : followUp.SoldProductName)</td>
                                <td>@(followUp.TicketSize.HasValue ? followUp.TicketSize.Value.ToString("N2") : "-")</td>
                                <td>@(string.IsNullOrWhiteSpace(followUp.PolicyNumber) ? "-" : followUp.PolicyNumber)</td>
                                <td>@(followUp.PolicyEnforceDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                                <td>@(string.IsNullOrWhiteSpace(followUp.ConversionReason) ? "-" : followUp.ConversionReason)</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@followUp.Id" class="btn btn-sm btn-secondary">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No follow-ups recorded.</p>
        }
    </div>
</div>
