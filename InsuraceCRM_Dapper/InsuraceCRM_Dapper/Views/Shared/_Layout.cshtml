<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Insurance CRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<body class="@(isAuthenticated ? "has-side-nav" : string.Empty)">
    <header class="top-bar navbar navbar-dark bg-primary shadow-sm">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                @if (isAuthenticated)
                {
                    <button class="navbar-toggler side-nav-toggle" type="button" id="sideNavToggle" aria-label="Toggle navigation" aria-controls="sideNav" aria-expanded="true">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                }
                <a class="navbar-brand mb-0" asp-controller="Customer" asp-action="Index">Insurance CRM</a>
            </div>
            <div class="d-flex align-items-center gap-3">
                @if (isAuthenticated)
                {
                    <span class="navbar-text text-white small">@User.Identity?.Name (@User.FindFirst("role")?.Value)</span>
                    <form class="d-inline" asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-sm btn-outline-light" asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </div>
    </header>
    <div class="app-shell @(isAuthenticated ? "with-side-nav" : "without-side-nav")">
        @if (isAuthenticated)
        {
            <aside id="sideNav" class="side-nav">
                <div class="side-nav__title text-uppercase text-white-50">Navigation</div>
                <nav class="nav flex-column mt-3">
                    <a class="nav-link side-nav-link @(currentController == "Home" ? "active" : string.Empty)" asp-controller="Home" asp-action="Index">Dashboard</a>
                    <a class="nav-link side-nav-link @(currentController == "Customer" && currentAction != "BulkAssign" ? "active" : string.Empty)" asp-controller="Customer" asp-action="Index">Customers</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a class="nav-link side-nav-link @(currentController == "Customer" && currentAction == "BulkAssign" ? "active" : string.Empty)" asp-controller="Customer" asp-action="BulkAssign">Bulk Assign</a>
                    }
                    <a class="nav-link side-nav-link @(currentController == "Reminder" ? "active" : string.Empty)" asp-controller="Reminder" asp-action="Today">Reminders</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link side-nav-link @(currentController == "Admin" ? "active" : string.Empty)" asp-controller="Admin" asp-action="ManageRoles">Admin</a>
                    }
                </nav>
            </aside>
            <div class="side-nav-overlay" id="sideNavOverlay" aria-hidden="true"></div>
        }
        <div class="content-area">
            <div class="content-inner container-fluid py-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @if (isAuthenticated)
    {
        <partial name="_ReminderModal" />
        <form asp-controller="Account" asp-action="Logout" method="post" class="d-none" id="antiForgeryForm">
            @Html.AntiForgeryToken()
        </form>
    }

    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - Insurance CRM
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/reminders.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
