<div class="modal fade" id="reminderModal" tabindex="-1" aria-labelledby="reminderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reminderModalLabel">Follow-up Reminder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Customer:</strong> <span id="reminderCustomerName"></span></p>
                <p><strong>Reminder Time:</strong> <span id="reminderDateTime"></span></p>
                <p><strong>Note:</strong> <span id="reminderNote"></span></p>
                <input type="hidden" id="reminderId" />
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" id="reminderCallButton" target="_blank">Call</a>
                <button type="button" class="btn btn-success" id="reminderDoneButton">Mark Done</button>
            </div>
        </div>
    </div>
</div>
