@using System.Linq
@model SoldProductDetailListViewModel
@{
    ViewData["Title"] = "Sold Product Details";
    var items = Model.Details?.ToList() ?? new List<SoldProductDetailInfo>();
    var filterLabel = Model.IsFiltered
        ? (Model.FilteredCustomerName ?? $"Customer #{Model.FilteredCustomerId}")
        : null;
    var emptyMessage = Model.IsFiltered
        ? "This customer does not have any sold product details yet."
        : "No sold product details available yet.";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Sold Product Details</h2>
        <p class="text-muted mb-0">
            @(Model.IsFiltered
                ? "Review the converted sales captured for this customer."
                : "All converted sales mapped to customers and products.")
        </p>
    </div>
    @if (Model.IsFiltered)
    {
        <div class="d-flex gap-2 flex-wrap">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Show all sales</a>
            @if (Model.FilteredCustomerId.HasValue)
            {
                <a asp-controller="Customer"
                   asp-action="History"
                   asp-route-customerId="@Model.FilteredCustomerId"
                   class="btn btn-outline-primary btn-sm">
                    Customer history
                </a>
            }
        </div>
    }
</div>

@if (Model.IsFiltered)
{
    <div class="alert alert-light border d-flex justify-content-between align-items-center flex-wrap gap-3 mb-3">
        <div>
            <div class="fw-semibold">@filterLabel</div>
            <div class="text-muted small">Showing only this customer's converted policies.</div>
        </div>
        <div class="d-flex align-items-center gap-2">
            <span class="badge bg-primary-subtle text-primary">
                @items.Count item@(items.Count == 1 ? string.Empty : "s")
            </span>
        </div>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Customer</th>
                            <th scope="col">Location</th>
                            <th scope="col">Catalog Product</th>
                            <th scope="col">Sold As</th>
                            <th scope="col">Ticket Size</th>
                            <th scope="col">Tenure (yrs)</th>
                            <th scope="col">Policy #</th>
                            <th scope="col">Enforce Date</th>
                            <th scope="col">Follow-up Date</th>
                            <th scope="col">Recorded On</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in items)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@detail.CustomerName</div>
                                    <div class="text-muted small">@detail.CustomerMobileNumber</div>
                                </td>
                                <td>@(string.IsNullOrWhiteSpace(detail.CustomerLocation) ? "-" : detail.CustomerLocation)</td>
                                <td>
                                    <div class="fw-semibold">@detail.ProductName</div>
                                    <div class="text-muted small">ID: @detail.ProductId</div>
                                </td>
                                <td>@detail.SoldProductName</td>
                                <td>@detail.TicketSize.ToString("N2")</td>
                                <td>@detail.TenureInYears</td>
                                <td>@detail.PolicyNumber</td>
                                <td>@detail.PolicyEnforceDate.ToString("yyyy-MM-dd")</td>
                                <td>@(detail.FollowUpDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                                <td>
                                    <div>@detail.CreatedOn.ToString("yyyy-MM-dd")</div>
                                    <div class="text-muted small">
                                        @(detail.UpdatedOn.HasValue ? $"Updated {detail.UpdatedOn:yyyy-MM-dd}" : string.Empty)
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">
                @emptyMessage
            </div>
        }
    </div>
</div>
